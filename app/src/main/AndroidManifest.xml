<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yingke.demo">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.ACTION_MANAGE_OVERLAY_PERMISSION" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FloatWindowX">
        <activity
            android:name=".ShowHintActivity"
            android:exported="true" />
        <activity
            android:configChanges="orientation|screenSize"
            android:name=".SecondaryPageShowFloatActivity"
            android:exported="true" />
        <activity
            android:name=".TestMoveActivity"
            android:exported="true" />
        <activity
            android:name=".CloseFloatActivity"
            android:exported="true" />
        <activity
            android:name=".HintFloatActivity"
            android:exported="true" />
        <activity
            android:name=".NeedShowActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>